<configuration>
    <!-- Console appender for stderr for MCP (to maintain compatibility) -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling file appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/mediawiki-mcp-server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/mediawiki-mcp-server.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- Keep 7 days worth of logs -->
            <maxHistory>7</maxHistory>
            <!-- Maximum total size of all log files (20MB) -->
            <totalSizeCap>20MB</totalSizeCap>
            <!-- If log file exceeds 5MB in a day, create new file -->
            <maxFileSize>5MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log levels for specific packages -->
    <logger name="com.sriniketh" level="INFO"/>
    <logger name="io.ktor.client" level="INFO"/>
    <logger name="io.modelcontextprotocol" level="WARN"/>

    <root level="WARN">
        <appender-ref ref="STDERR"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
